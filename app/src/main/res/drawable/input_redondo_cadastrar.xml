<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/marron_claro" />
            <corners android:radius="10dp" />
            <stroke android:width="3dp" android:color="@color/marron_escuro" />
            <padding android:bottom="8dp" android:left="8dp" android:right="8dp" android:top="8dp" />
        </shape>
    </item>
    <item>
        <shape android:layout_width="wrap_content" android:layout_height="wrap_content" android:shape="rectangle">
            <solid android:color="@color/marron_claro" />
            <corners android:radius="10dp" /> <!-- valor do arredondamento das bordas -->
            <stroke android:width="3dp" android:height="2dp" android:color="@color/marron_ouro" />
            <padding android:bottom="8dp" android:left="8dp" android:right="8dp" android:top="8dp" />
        </shape>
    </item>
</selector>